<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ListProgress" parent="@android:style/Widget.Material.ProgressBar" tools:targetApi="lollipop" >
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="PopupTheme" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
    </style>

    <style name="SpinnerStyle" parent="AppTheme">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

</resources>
